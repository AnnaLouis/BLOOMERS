<!-- La bannière -->


<div class="banner">
  <div class="banner-content">
    <h1>
      <span style="padding:0 20px 20px 20px;border-bottom:3px solid #FABF01">
        BLOOMERS
      </span>
    </h1>
    <!-- <div class="trait"> </div> -->
    <div class="roll">
      <div class="rollvisible">
        <ul>
          <li> ta startup mérite le meilleur</li>
          <li> trouve le meilleur accompagnement</li>
          <li>  incubateur, accélérateur, co-working</li>
        </ul>
      </div>
    </div>
    <div class="row" style="margin:0px">
      <%= link_to bloomers_path, style:"color:white" do %>
      <div class="col-xs-6">
      <div class="btn-home">
        <div class="row" style="padding-bottom:20px">
          <%= image_tag "startup.png", class:"icon-home" %>
        </div>
        Je suis une startup
        </div>
      </div>
      <% end %>

      <%= link_to bloomers_path, style:"color:white" do %>
      <div class="col-xs-6">
        <div class="btn-home">
          <div class="row" style="padding-bottom:20px">
            <%= image_tag "light-bulb.png", class:"icon-home"%>
          </div>
          J'accompagne des startups
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper-home">
