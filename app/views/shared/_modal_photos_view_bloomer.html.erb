<div class="modal fade" id="modal-photos-view-bloomer" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="wrapper-show-candidature">
        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h2 class="modal-title" id="myModalLabel">
           Locaux de <%= bloomer.name %>
          </h2>
        </div>
        <div class="modal-body" style="padding:15px 40px 0px 40px">
          <div class="row content">
          <% if @bloomer.photos? %>
          <% @bloomer.photos.each do |photo| %>
            <%= cl_image_tag photo.path, crop: :fill, class: "big-video" %>
          <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
