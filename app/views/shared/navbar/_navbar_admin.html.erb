<div class="navbar-bloomer">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-bloomer-brand" do %>
  <%= image_tag "pictojaune.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-bloomer-right hidden-xs hidden-sm">

    <!-- Profile picture and dropdown -->
    <div class="navbar-bloomer-item">
      <div class="dropdown">
        <p id="navbar-bloomer-menu" data-toggle="dropdown"> Les Bloomers </p>
        <ul class="dropdown-menu dropdown-menu-right navbar-bloomer-dropdown-menu">
          <li>
            <%= link_to "/bloomers" do %>
            <i class="fa fa-eye" aria-hidden="true"></i> Tous les Bloomers <!-- <#%= t(".profile", default: "Profile") %#> -->
            <% end %>
          </li>
          <li>
            <%= link_to "/map" do %>
            <i class="fa fa-map-marker" aria-hidden="true"></i> La Carte <%= t(".profile", default: "Bloomers") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-bloomer-item">
      <div class="dropdown">
        <p id="navbar-bloomer-menu" data-toggle="dropdown"> Connexion </p>
      </div>
    </div>
    <div class="navbar-bloomer-item">
      <div class="dropdown">
        <p id="navbar-bloomer-menu" data-toggle="dropdown"> Inscription </p>
      </div>
    </div>

  </div>

</div>

