<div class="navbar-bloomer">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-bloomer-brand" do %>
  <%= image_tag "pictobrand3.png" %>
  <% end %>
  <!-- Right Navigation -->
        <div class="navbar-bloomer-right hidden-xs hidden-sm">
          <!-- Les Bloomers -->
          <div class="navbar-bloomer-item">
            <div class="dropdown">
             <p class="navbar-bloomer-link dropdown-toggle", id="navbar-bloomer-menu", data-toggle="dropdown"> Découvrir </p>
             <ul class="dropdown-menu navbar-bloomer-link dropdown-menu-right navbar-bloomer-dropdown-menu">
              <li>
                <%= link_to "La Carte", map_path %>
              </li>
              <li>
               <%= link_to "Les Bloomers", bloomers_path %>
             </li>
           </ul>
         </div>
       </div>
     <!-- Different navigation if login or not -->
     <% if user_signed_in? %>
        <!-- Admin -->
       <%  if current_user.admin? %>
          <p class="navbar-bloomer-item"> <%= link_to "Interface Administrateur",  admin_root_path %> </p>
      <!-- Bloomer Admin -->
      <%  elsif current_user.bloomer_admin? %>
          <% if current_user.bloomers.count == 0 %>
          <p class="navbar-bloomer-item"> <%= link_to "Je crée mon profil bloomer", new_bloomer_path %> </p>
          <% else %>

            <div class="navbar-bloomer-item">
                <div class="dropdown">
                 <p class="navbar-bloomer-link dropdown-toggle", id="navbar-bloomer-menu", data-toggle="dropdown"> Mon profil bloomer </p>
                 <ul class="dropdown-menu navbar-bloomer-link dropdown-menu-right navbar-bloomer-dropdown-menu">
                  <li>
                     <%= link_to "Mon dashboard", dashboard_path %>
                  </li>
                  <li>
                     <%= link_to "Mon bloomer", bloomer_path(current_user.bloomers.first)%>

                 </li>
               </ul>
             </div>
           </div>
            <%= link_to dashboard_path(anchor: "tab=dashboard-candidatures"), class: "navbar-bloomer-item navbar-bloomer-link" do %>
              <div class="badge-container">
                <i class="fa fa-commenting-o" aria-hidden="true"></i>
                <div class="badge badge-blue"> <%= 404+current_user.candidatures.where(status: "new").count %> </div>
              </div>
            <% end %>
          <% end %>
      <!-- Startup_Admin -->
      <%  elsif current_user.startup_admin? %>
           <% if current_user.startups.count == 0 %>
          <p class="navbar-bloomer-item"> <%= link_to "Je crée mon profil startup",  new_startup_path %> </p>
          <% else %>
          <p class="navbar-bloomer-item"> <%= link_to "Voir mon profil startup", dashboard_path %> </p>
   <!--        Si on veut rajouter des notificatiosn côté startup -->
           <!--  <#%= link_to dashboard_path, class: "navbar-bloomer-item navbar-bloomer-link" do %>
              <div class="badge-container">
                <i class="fa fa-commenting-o" aria-hidden="true"></i>
                <div class="badge badge-blue"><#%= current_user.messages.count %></div>
              </div>
            <#% end %> -->
          <% end %>
      <% end %>
          <%= link_to destroy_user_session_path, class: "navbar-bloomer-item navbar-bloomer-link", method: :delete do %>
          <%= t(".sign_out", default: "Déconnexion") %>
          <% end %>
    <% else%>
        <div class="navbar-bloomer-item">
          <%= link_to "Connexion", new_user_session_path, class: "navbar-bloomer-item navbar-bloomer-link" %>
        </div>
        <div class="navbar-bloomer-item">
          <%= link_to "Inscription",new_user_registration_path, class: "navbar-bloomer-item navbar-bloomer-link" %>
        </div>
    <% end %>

      </div>
    </div>
</div>

