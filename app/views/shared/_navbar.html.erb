<div class="navbar-bloomer">
      <!-- Logo -->
      <%= link_to root_path, class: "navbar-bloomer-brand" do %>
      <%= image_tag "pictobleu.png" %>
      <% end %>

      <!-- Right Navigation -->
      <div class="navbar-bloomer-right hidden-xs hidden-sm">

        <!-- Les Bloomers -->
        <div class="navbar-bloomer-item">
          <div class="dropdown">
           <p class="navbar-bloomer-link dropdown-toggle", id="navbar-wagon-menu", data-toggle="dropdown"> Les Bloomers </p>
           <ul class="dropdown-menu dropdown-menu-right navbar-bloomer-dropdown-menu">
            <li>
              <%= link_to "La Carte", map_path %>
            </li>
            <li>
               <%= link_to "Les Bloomers", bloomers_path %>
            </li>
          </ul>
        </div>
      </div>

  <!-- Different navigation if login or not -->
  <% if user_signed_in? %>

      <!--  Startup Admin -->
      <%  if current_user.startup_admin? %>

          <% if current_user.startups.count == 0 %>

              <%= link_to "Créer mon profil startup", new_startup_path, id: "navbar-wagon-menu" %>

          <% else %>

              <%= link_to "Mon profil startup", new_startup_path %>
              <%= link_to "Je cherche un bloomer", bloomers_path %>
               <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>

           <% end %>

    <!-- Bloomer Admin -->
      <%  else current_user.bloomer_admin? %>

          <% if current_user.bloomers.count == 0 %>

              <%= link_to "Créer mon profil Bloomer", new_startup_path %>

          <% else %>

              <%= link_to "Mes startups", bloomers_path %>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>

           <% end %>

      <!-- Notification --><!-- Notification -->
      <%= link_to "#", class: "navbar-bloomer-item navbar-bloomer-link" do %>
      <div class="badge-container">
        <i class="fa fa-commenting-o" aria-hidden="true"></i>
        <div class="badge badge-blue">2</div>
      </div>
      <% end %>

      <% end %>

    <% else %>

      <div class="navbar-bloomer-item">
      <!-- Login text link -->
      <%= link_to "Connexion", new_user_session_path, class: "navbar-bloomer-item navbar-bloomer-link" %>
      </div>

      <div class="navbar-bloomer-item">
      <!-- Suscribe text link -->
      <%= link_to "Inscription",new_user_registration_path, class: "navbar-bloomer-item navbar-bloomer-link" %>
      </div>

    <% end %>

  </div>

  </div>

</div>


